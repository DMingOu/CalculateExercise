<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/shape_white_radius_8"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "666.  1 + 1 + 2 + 3 = "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:typeface="serif"
        />

    <TextView
        android:id="@+id/tv_student_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="你的答案： 54154"
        android:textSize="16sp"
        android:layout_below="@id/tv_question"
        android:layout_alignStart="@id/tv_question"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="正确答案： 54154"
        android:textSize="16sp"
        android:layout_below="@id/tv_student_answer"
        android:layout_alignStart="@id/tv_question"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/iv_status_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        tools:src ="@drawable/ic_correct"
        />

</RelativeLayout>